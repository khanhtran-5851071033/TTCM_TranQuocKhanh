<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".Theme">

    <LinearLayout
        android:id="@+id/btn_technology"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@drawable/custom_line_setting"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Technology"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_surface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tech" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luyện nghe"
                    android:textColor="@color/design_default_color_surface" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 2"
                    android:textColor="@color/design_default_color_surface" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_fashion"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_btn_login"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Fashion"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_surface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fashion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luyện nói"
                    android:textColor="@color/design_default_color_surface" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level 3"
                    android:textColor="@color/design_default_color_surface" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_sport"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_row_theme"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Sport"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_surface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:textColor="@color/design_default_color_surface" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level 2"
                    android:textColor="@color/design_default_color_surface" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_music"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_row_theme2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Music"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_surface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mussic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    android:textColor="@color/design_default_color_surface" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level 2"
                    android:textColor="@color/design_default_color_surface" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>