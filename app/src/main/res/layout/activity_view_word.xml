<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".viewWord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Word"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_spell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="spell"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_sound"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/low_volume_60px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/avv2"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Từ loại:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="a"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/avv"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/txt_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nghĩa của từ:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="b"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/avv3"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Đồng nghĩa:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_synoym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="c"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/avv4"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Ví dụ:"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_exampe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="d"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/avv5"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Yêu thích"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/hearts" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>


</ScrollView>