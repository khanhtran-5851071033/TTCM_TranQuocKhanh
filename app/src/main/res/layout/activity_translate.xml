<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_flash"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".Translate">

    <LinearLayout
        android:id="@+id/transitions_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@drawable/custom_text"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_delete_input"
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:layout_gravity="right"
                android:paddingEnd="5dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/cancel_48px" />

            <EditText
                android:id="@+id/text_input"
                android:layout_width="357dp"
                android:layout_height="238dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_btn_flash"
                android:hint="Enter your text"
                android:padding="7dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineear_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_void"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/microphone" />

            <TextView
                android:id="@+id/txt_speed2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:text="Speed" />

            <SeekBar
                android:id="@+id/mSeekBarSpeed"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/thum1" />

            <ImageView
                android:id="@+id/img_speak"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/low_volume_60px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_anh_viet"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_line_setting"
                android:text="Anh-Việt"
                android:textColor="?attr/colorBackgroundFloating" />

            <ImageView
                android:id="@+id/img_strans"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingStart="5dp"
                app:srcCompat="@drawable/refresh_48px" />

            <Button
                android:id="@+id/btn_viet_anh"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_line_setting"
                android:text="Việt_Anh"
                android:textColor="?attr/colorBackgroundFloating" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txt_output"
                android:layout_width="350dp"
                android:layout_height="277dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_row_theme"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>