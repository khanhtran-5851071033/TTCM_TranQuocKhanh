<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_line_setting"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/low_volume_60px" />

            <TextView
                android:id="@+id/text"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:text="Tự động phát âm khi tra từ"
                android:textColor="@android:color/background_light" />

            <Switch
                android:id="@+id/s_autoSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumb="@drawable/thumba" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/openmail"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_line_setting"
            android:gravity="center"
            android:onClick="openEmail"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/secured_letter_64px" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:text="Gửi email báo lỗi hoặc góp ý"
                android:textColor="@color/design_default_color_surface" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_line_setting"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/help" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="Những câu hỏi thường gặp"
                android:textColor="@color/design_default_color_surface" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/openFB"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_line_setting"
            android:gravity="center"
            android:onClick="openFB"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/f" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="Chia sẽ đến bạn bè"
                android:textColor="@color/design_default_color_surface" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/openApstore"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_line_setting"
            android:gravity="center"
            android:onClick="openApstore"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/star_64px" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="Đánh giá ứng dụng trên store"
                android:textColor="@color/design_default_color_surface" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="252dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_line_setting"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/info_64px" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:text="Thông tin"
                    android:textColor="@color/design_default_color_surface"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Phiên bản 1.0"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:text="Phát triển bởi Kaylins Tran"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>