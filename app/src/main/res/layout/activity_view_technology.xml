<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".viewTechnology">

    <LinearLayout
        android:id="@+id/linear_theme"
        android:layout_width="360dp"
        android:layout_height="155dp"
        android:background="@drawable/custom_line_setting"
        android:orientation="vertical"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:transitionName="trans">

        <TextView
            android:id="@+id/txt_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Technology"
            android:textColor="@color/design_default_color_surface"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_theme"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tech" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luyện nghe"
                    android:textColor="@color/design_default_color_surface" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luyện nói"
                    android:textColor="@color/design_default_color_surface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/add_48px" />

                    <ImageView
                        android:id="@+id/btn_edit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/edit_file_64px" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/n_show_theme"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/next" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transitions_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/custom_text"
            android:padding="7dp"
            android:text="Well come to Khanh IT"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background" />

        <LinearLayout
            android:id="@+id/lineear_menu"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_void"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/microphone" />

            <TextView
                android:id="@+id/txt_speed"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:text="Speed" />

            <SeekBar
                android:id="@+id/mSeekBarSpeed"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/thum1" />

            <ImageView
                android:id="@+id/img_speak"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/low_volume_60px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_delete_Text"
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:paddingStart="5dp"
                app:srcCompat="@drawable/cancel_48px" />

            <TextView
                android:id="@+id/txt_speech_to_text"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Speaking follow transcript"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/previous1" />

            <TextView
                android:id="@+id/txt_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textColor="@color/Red" />

            <TextView
                android:id="@+id/txt_total_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="/6"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img_nexxt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>